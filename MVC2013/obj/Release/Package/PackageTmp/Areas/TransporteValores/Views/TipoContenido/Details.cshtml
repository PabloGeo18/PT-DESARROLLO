@model MVC2013.Models.Tipo_Contenido

@{
    ViewBag.Title = @Resources.Resources.tipo_contenido + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.tipo_contenido_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>@Resources.Resources.tipo_contenido_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>

        <dt>&nbsp;</dt>
        <dd></dd>

        <dt>@Resources.Resources.tipo_contenido_descripcion</dt>
        <dd>@Html.DisplayFor(model => model.descripcion)</dd>

        <dt>&nbsp;</dt>
        <dd></dd>

        <dt>@Resources.Resources.tipo_contenido_activo</dt>
        <dd>@Html.DisplayFor(model => model.activo)</dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_tipo_contenido }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>
