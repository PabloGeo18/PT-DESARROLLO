@model MVC2013.Models.Device

@{
    ViewBag.Title = @Resources.Resources.device + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.device_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>@Resources.Resources.device_serial</dt>
        <dd>@Html.DisplayFor(model => model.numero_serial)</dd>

        <dt>&nbsp;</dt>
        <dd></dd>

        <dt>@Resources.Resources.device_ultimo_error</dt>
        <dd>@Html.DisplayFor(model => model.ultimo_error)</dd>

        <dt>&nbsp;</dt>
        <dd></dd>

        <dt>@Resources.Resources.device_activo</dt>
        <dd>@Html.DisplayFor(model => model.activo)</dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_device }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>
