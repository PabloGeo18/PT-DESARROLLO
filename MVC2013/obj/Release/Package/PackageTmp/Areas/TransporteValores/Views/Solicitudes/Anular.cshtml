@model MVC2013.Models.Solicitudes

@{
    ViewBag.Title = @Resources.Resources.solicitudes + "_" + @Resources.Resources.anular;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.solicitudes_anular</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id_solicitud)
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label(@Resources.Resources.comentario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea id="comentario" class="form-control" name="comentario"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Resources.Resources.anular class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</div>

@section Scripts {}
