@model IEnumerable<MVC2013.Models.Solicitud_Tipo>

@{
    ViewBag.Title = @Resources.Resources.tipo_solicitud + "_" + @Resources.Resources.lista;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.tipo_solicitud_lista</h2>

<p>
    @Html.ActionLink(@Resources.Resources.crear_nuevo, "Create")
</p>
<table class="zebra-striped">
    <thead>
        <th>@Resources.Resources.codigo</th>
        <th>@Resources.Resources.nombre</th>
        <th>@Resources.Resources.descripcion</th>
        <th>@Resources.Resources.activo</th>  
        <th>@Resources.Resources.acciones</th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id=item.id_solicitud_tipo }) |
            @Html.ActionLink(@Resources.Resources.detalle, "Details", new { id=item.id_solicitud_tipo }) |
            @Html.ActionLink(@Resources.Resources.eliminar, "Delete", new { id=item.id_solicitud_tipo })
        </td>
    </tr>
}

</table>
