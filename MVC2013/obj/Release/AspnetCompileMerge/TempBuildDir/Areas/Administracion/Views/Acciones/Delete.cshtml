@model MVC2013.Models.Acciones

@{
    ViewBag.Title = @Resources.Resources.accion_nombre + "_" + @Resources.Resources.eliminar;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.accion_eliminar</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.accion_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>
        
        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.controlador_nombre</dt>
        <dd>@Html.DisplayFor(model => model.Controladores.nombre)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Resources.Resources.eliminar class="btn btn-default" /> |
            @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
        </div>
    }
</div>