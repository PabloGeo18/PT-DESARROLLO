@model MVC2013.Models.Paises

@{
    ViewBag.Title = @Resources.Resources.paises + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.paises_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.paises_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>

        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.paises_activo</dt>
        <dd>@Html.DisplayFor(model => model.activo)</dd>
       
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_pais }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>
