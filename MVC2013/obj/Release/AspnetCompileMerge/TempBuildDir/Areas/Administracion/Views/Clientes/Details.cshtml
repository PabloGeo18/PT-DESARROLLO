@model MVC2013.Models.Clientes

@{
    ViewBag.Title = @Resources.Resources.clientes + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.clientes_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>@Resources.Resources.clientes_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>

        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.clientes_nombre_corto</dt>
        <dd>@Html.DisplayFor(model => model.nombre_corto)</dd>
        
        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.clientes_tipo</dt>
        <dd>@Html.DisplayFor(model => model.Tipo_Cliente.nombre)</dd>

        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.clientes_activo</dt>
        <dd>@Html.DisplayFor(model => model.activo)</dd>     

    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_cliente }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>
