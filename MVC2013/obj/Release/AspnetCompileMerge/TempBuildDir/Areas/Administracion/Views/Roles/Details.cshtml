@model MVC2013.Models.Roles

@{
    ViewBag.Title = @Resources.Resources.rol_nombre + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.rol_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.rol_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>
        <dt>&nbsp;</dt><dd></dd>
        <dt>@Resources.Resources.rol_aplicacion</dt>
        <dd>@Html.DisplayFor(model => model.Aplicaciones.nombre)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_rol }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>
