@model IEnumerable<MVC2013.Models.Monedas>

@{
    ViewBag.Title = @Resources.Resources.monedas + "_" + @Resources.Resources.lista;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.monedas_lista</h2>

<p>
    @Html.ActionLink(@Resources.Resources.crear_nuevo, "Create")
</p>
<table class="zebra-striped">
    <thead>
        <th>@Resources.Resources.monedas_nombre</th>
        <th>@Resources.Resources.monedas_simbolo</th>
        <th>@Resources.Resources.monedas_base</th>
        <th>@Resources.Resources.monedas_activo</th>      
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
        <td>@Html.DisplayFor(modelItem => item.simbolo)</td>
        <td>@Html.DisplayFor(modelItem => item.moneda_base)</td>
        <td>@Html.DisplayFor(modelItem => item.activo)</td>
        <td>
            @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id=item.id_moneda }) |
            @Html.ActionLink(@Resources.Resources.detalle, "Details", new { id=item.id_moneda }) |
            @Html.ActionLink(@Resources.Resources.eliminar, "Delete", new { id=item.id_moneda })
        </td>
    </tr>
}

</table>
