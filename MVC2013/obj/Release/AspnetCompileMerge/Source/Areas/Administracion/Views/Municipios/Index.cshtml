@model IEnumerable<MVC2013.Models.Municipios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="zebra-striped">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eliminado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_usuario_creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_usuario_modificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_usuario_eliminacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_modificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_eliminacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.nombre)
        </th>
        <th></th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eliminado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario_creacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario_modificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario_eliminacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_creacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_modificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_eliminacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamentos.nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_municipio }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_municipio }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_municipio })
            </td>
        </tr>
    }

</table>
