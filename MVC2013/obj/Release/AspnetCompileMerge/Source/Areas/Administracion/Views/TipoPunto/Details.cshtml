@model MVC2013.Models.Tipo_Punto

@{
    ViewBag.Title = @Resources.Resources.tipo_punto + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.tipo_punto_detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.tipo_punto</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>

        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.tipo_punto_activo</dt>
        <dd>@Html.DisplayFor(model => model.activo)</dd>
       
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = Model.id_tipo_punto }) |
    @Html.ActionLink(@Resources.Resources.listado_regresar, "Index")
</p>