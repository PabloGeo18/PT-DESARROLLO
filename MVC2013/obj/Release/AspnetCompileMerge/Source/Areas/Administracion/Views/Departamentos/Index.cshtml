@model IEnumerable<MVC2013.Models.Departamentos>

@{
    ViewBag.Title = @Resources.Resources.paises + "_" + @Resources.Resources.lista;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.departamentos_lista</h2>

<p>
    @Html.ActionLink(@Resources.Resources.crear_nuevo, "Create")
</p>
<table class="zebra-striped">
    <thead>
        <th>@Resources.Resources.departamentos_nombre</th>
        <th>@Resources.Resources.paises_nombre</th>
        <th>@Resources.Resources.departamentos_activo</th>
        <th></th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Paises.nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.activo)</td>
            <td>
                @Html.ActionLink(@Resources.Resources.editar, "Edit", new { id = item.id_departamento }) |
                @Html.ActionLink(@Resources.Resources.detalle, "Details", new { id = item.id_departamento }) |
                @Html.ActionLink(@Resources.Resources.eliminar, "Delete", new { id = item.id_departamento })
            </td>
        </tr>
    }

</table>
