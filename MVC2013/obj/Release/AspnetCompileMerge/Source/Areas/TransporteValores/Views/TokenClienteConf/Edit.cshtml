                    @Html.EditorFor(model => model.autogenerar)
                    @Html.ValidationMessageFor(model => model.autogenerar, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label(@Resources.Resources.volumen_minimo_autogeneracion, htmlAttributes: new { @class = "control-label col-md-2" })
