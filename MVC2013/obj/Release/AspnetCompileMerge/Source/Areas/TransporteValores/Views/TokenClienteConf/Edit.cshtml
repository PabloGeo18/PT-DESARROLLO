@model MVC2013.Models.Token_Cliente_Conf

@{
    ViewBag.Title = @Resources.Resources.token_cliente_conf + "_" + Resources.Resources.editar;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.token_cliente_conf_editar</h2>


