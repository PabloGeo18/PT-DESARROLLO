@model IEnumerable<MVC2013.Models.Device>

@{
    ViewBag.Title = ViewBag.Title = @Resources.Resources.device + "_" + @Resources.Resources.lista;
    Layout = "~/Areas/TransporteValores/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.device_lista</h2>

<p>
    @Html.ActionLink(@Resources.Resources.crear_nuevo, "Create")
</p>
<table class="zebra-striped">
    <thead>
        <th>@Resources.Resources.device_serial</th>
        <th>@Resources.Resources.device_ultimo_error</th>
        <th>@Resources.Resources.device_activo</th>  
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.numero_serial)</td>
        <td>@Html.DisplayFor(modelItem => item.ultimo_error)</td>
        <td>@Html.DisplayFor(modelItem => item.activo)</td>    
        <td>
            @Html.ActionLink(@Resources.Resources.editar,   "Edit",    new { id=item.id_device }) |
            @Html.ActionLink(@Resources.Resources.detalle,  "Details", new { id=item.id_device }) |
            @Html.ActionLink(@Resources.Resources.eliminar, "Delete",  new { id=item.id_device })
        </td>
    </tr>
}

</table>
