@model MVC2013.Models.Departamentos

@{
    ViewBag.Title = "Eliminar Departamento";
    Layout = "~/Areas/Customers/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.departamentos_eliminar</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>

<div class="panel panel-default">
    <div class="panel-heading bg-red">Eliminar Departamento</div>
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt>@Resources.Resources.departamentos_nombre</dt>
                <dd>@Html.DisplayFor(model => model.nombre)</dd>

                <dt>&nbsp;</dt>
                <dd></dd>

                <dt>País</dt>
                <dd>@Html.DisplayFor(model => model.Paises.nombre)</dd>
            </dl>

            <dl class="dl-horizontal">
                <dd>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_departamento })'">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                        </button>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>


<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>