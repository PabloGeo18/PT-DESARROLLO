@model MVC2013.Models.Ubicaciones
@{
    ViewBag.Title = "Crear Ubicacion";
    Layout = "~/Areas/Customers/Views/Shared/_Layout.cshtml";
}

<h2>Crear Nueva Ubicacion</h2>
<h5><label>Cliente:</label> @ViewBag.Cliente.nombre </h5>
<h5><label>Razon Social:</label> @ViewBag.RS.razon_social</h5>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <input type="hidden" name="id_cliente" value="@ViewBag.Cliente.id_cliente" />
        <input type="hidden" name="id_razon_social" value="@ViewBag.RS.id_razon_social" />
        <div class="panel panel-warning">
            <div class="panel-heading bg-yellow-active">Informacion de Ubicacion</div>
            <div class="panel-body">
                
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.nombre, "Ubicación", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", required = "required", id = "focus" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.direccion, "Dirección", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.id_municipio, "Municipio", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.id_municipio, null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.id_municipio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cantidad_solicitada, "Guardias Solicitados", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.cantidad_solicitada, new { htmlAttributes = new { @class = "form-control" } })
                                <font color="red"> @Html.ValidationMessage("cantidad_solicitada") </font>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cantidad_contratados, "Guardias Contratados", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.cantidad_contratados, new { htmlAttributes = new { @class = "form-control" } })
                                <font color="red"> @Html.ValidationMessage("cantidad_contratada") </font>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.id_contacto_encargado, "Encargado", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.id_contacto_encargado, new { htmlAttributes = new { @class = "form-control" }})
                                <font color="red"> @Html.ValidationMessage("encargado") </font>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.id_contacto_responsable, "Responsable", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.id_contacto_responsable, new { htmlAttributes = new { @class = "form-control" } })
                                <font color="red"> @Html.ValidationMessage("responsable") </font>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn btn-success btn-sm" type="submit">
                            <span class="glyphicon glyphicon-save"></span>&nbsp;Crear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Details_RS", new { id_Razon_Social = @ViewBag.RS.id_razon_social })'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;Regresar a Detalle de Razon Social
    </button>
</div>

<script>
    $('#focus').focus();
</script>