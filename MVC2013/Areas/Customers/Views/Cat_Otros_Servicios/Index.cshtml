@model IEnumerable<MVC2013.Models.Cat_Otros_Servicios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Customers/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Tipos de Servicios Adicionales</h2>

<p>
    <button class="btn btn-success btn-sm " onclick="location.href = '@Url.Action("Create")'">
        <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;@Resources.Resources.crear
    </button>
</p>
<div class="panel panel-primary">
    <div class="panel-heading">Tipos de Servicio</div>
    <div class="panel-body">

        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Acciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.id_cat_otro_servicio
                    </td>
                    <td>
                        @item.nombre
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = item.id_cat_otro_servicio })'">
                            <span class="glyphicon glyphicon-edit"></span>&nbsp;    @Resources.Resources.editar
                        </button>
                        <button class="btn btn-info btn-sm" onclick="location.href = '@Url.Action("Details", new { id = item.id_cat_otro_servicio })'">
                            <span class="glyphicon glyphicon-search"></span>&nbsp;     @Resources.Resources.detalle
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = item.id_cat_otro_servicio })'">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;   @Resources.Resources.eliminar
                        </button>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

