@model MVC2013.Models.Contactos

@{
    ViewBag.Title = "Detalle de Contacto";
    Layout = "~/Areas/Customers/Views/Shared/_Layout.cshtml";
}

<h2>Detalle de Contacto</h2>

<div class="panel panel-default">
    <div class="panel-heading bg-yellow">Información de Contacto</div>
    <div class="panel-body">
        <div>
            <hr />
            <div class="col-md-4 col-lg-4">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nombre)
                    </dd>
                    <dt>
                        Puesto
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Contacto_Puesto.descripcion)
                    </dd>
                    <dt>
                        Telefono
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.telefono)
                    </dd>
                </dl>
            </div>
            <div class="col-md-8 col-lg-8">
                <dl class="dl-horizontal">
                    <dt>
                        E-Mail
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.email)
                    </dd>

                    <dt>
                        Comentario
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.comentario)
                    </dd>
                    <dt>
                        Razones Sociales
                    </dt>

                    @foreach (var razon_social_contacto in Model.Razon_Social_Contacto)
                    {
                        <dd>@razon_social_contacto.Razones_Sociales.razon_social</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>



<p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Edit", new { id = Model.id_contacto })'">
                <span class="glyphicon glyphicon-edit"></span> @Resources.Resources.editar
            </button>
        </div>
    </div>

    <div class="form-group">
        <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
    </div>

</p>
