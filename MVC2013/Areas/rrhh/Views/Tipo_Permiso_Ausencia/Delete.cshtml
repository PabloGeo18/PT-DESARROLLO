@model MVC2013.Models.Tipo_Permiso_Ausencia

@{
    ViewBag.Title = "Tipo_Permiso_Ausencia";
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Tipo de Permiso para Ausencia</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tipo de Permiso para Ausencia</dt>
        <dd>@Model.descripcion</dd>
        <dt>Situación</dt>
        <dd>@Model.Situacion.nombre</dd>
    </dl>

    <dl class="dl-horizontal">
        <dd>
            @using (Html.BeginForm("Eliminar", "Tipo_Permiso_Ausencia", FormMethod.Post))
            {
                @Html.HiddenFor(e=>e.id_tipo_permiso_ausencia)
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Eliminar", new { id = Model.id_tipo_permiso_ausencia })'">
                    <span class="glyphicon glyphicon-edit"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>
</div>
<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
