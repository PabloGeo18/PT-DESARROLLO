@model MVC2013.Models.Puesto
@using System.Globalization;
@{
    ViewBag.Title = Resources.Resources.puesto + "_" + Resources.Resources.eliminar;
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.puesto_eliminar</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayName(Resources.Resources.puesto_nombre)</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>
        <dt>@Html.DisplayName(Resources.Resources.tipo_puesto_nombre)</dt>
        <dd>@Html.DisplayFor(model => model.Tipo_Puesto.nombre)</dd>
        <dt>Sueldo Base</dt>
        <dd>@Model.sueldo_base.ToString("C", CultureInfo.GetCultureInfo("es-GT"))</dd>
        <dt>Bono Decreto</dt>
        <dd>@Model.bono_decreto.ToString("C", CultureInfo.GetCultureInfo("es-GT"))</dd>
        <dt>Bono Extra</dt>
        <dd>@Model.bono_extra.ToString("C", CultureInfo.GetCultureInfo("es-GT"))</dd>
        <dt>Genera Prestaciones</dt>
        <dd>@((Model.prestaciones) ? "Si" : "No")</dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            <button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("Eliminar", new { id = Model.id_puesto })'">
                <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
            </button>
        </dd>
    </dl>
</div>
<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href='@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>