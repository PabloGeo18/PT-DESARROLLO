@model MVC2013.Models.Descuento_Periodico

@{
    ViewBag.Title = Resources.Resources.prestamo + "_" + Resources.Resources.editar;
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.prestamo_editar</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "", new { })
        </div>
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.id_descuento_periodico)
        <div class="row">
            <div class="col-lg-5 col-md-6 col-xs-12 col-sm-12">
                <dl class="dl-horizontal">
                    <dt>@Resources.Resources.tipo_prestamo_nombre</dt>
                    <dd>@Html.DropDownListFor(model => model.id_tipo_prestamo, (IEnumerable<SelectListItem>)ViewBag.tipo_prestamo, htmlAttributes: new { @class = "form-control", @required = "required" })</dd>
                    <dt>&nbsp;</dt>
                    <dd></dd>
                    <dt>@Resources.Resources.fecha_inicio</dt>
                    <dd>
                        <div style="position:relative">
                            <input type='text' class="form-control" id="fecha_inicio_prestamo" name="fecha_inicio_prestamo" required value="@ViewBag.fecha_inicio_prestamo" />
                        </div>
                    </dd>
                    <dt>&nbsp;</dt>
                    <dd></dd>
                    <dt>@Resources.Resources.prestamo_nombre</dt>
                    <dd>
                        <button class="btn btn-primary btn btn-sm" type="button" onclick="location.href='@Url.Action("Cuotas", new { id = Model.id_descuento_periodico, error = false })'">
                            <span class="glyphicon glyphicon-edit"></span>&nbsp;@Resources.Resources.editar&nbsp;@Resources.Resources.plan_pago_nombre
                        </button>
                    </dd>
                    <dt>&nbsp;</dt>
                    <dd></dd>
                    <dt>@Resources.Resources.tipo_plan_pago_nombre</dt>
                    <dd>@Html.DropDownListFor(model => model.id_tipo_plan_pago, (IEnumerable<SelectListItem>)ViewBag.tipos_pago, htmlAttributes: new { @class = "form-control", @required = "required" })</dd>
                    <dt>&nbsp;</dt>
                    <dd></dd>
                    <dt>@Resources.Resources.descripcion</dt>
                    <dd>@Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dd>
                        <button class="bnt btn-success btn btn-sm" type="submit">
                            <span class="glyphicon glyphicon-save"></span>@Resources.Resources.guardar
                        </button>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
}
    
<div class="form-group">
    <button class="btn-bitbucket btn-sm" type="button" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>

<script>
    $(function () {

        $('#fecha_inicio_prestamo').datetimepicker(
                                    {
                                        viewMode: 'days',
                                        format: 'MM/YYYY',
                                    });

    });
</script>
