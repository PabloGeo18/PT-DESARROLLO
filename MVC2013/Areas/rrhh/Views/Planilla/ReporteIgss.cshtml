@using System.Globalization;
@{
    ViewBag.Title = "Archivo de IGSS";
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>Archivo de IGSS</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("GenerarArchivo", "Planilla", FormMethod.Post, new { @id = "form_submit" }))
    {

        <div class="form-group">
            @Html.Label("Empresa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_empresa", (IEnumerable<SelectListItem>)ViewBag.id_empresa, "---", htmlAttributes: new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="position:relative">
                    <input type='text' required class="form-control" id="fecha" name="fecha" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-sm btn-success" id="btn_submit" data-loading-text="Generando...">
                    <span class="glyphicon glyphicon-download"></span>&nbsp;Generar archivo de texto
                </button>
            </div>
        </div>
    }
</div>


<script>
    $('#fecha').datetimepicker({
        viewMode: 'months',
        format: 'MM/YYYY',
    });

</script>