@model MVC2013.Models.Tipo_Puesto

@{
    ViewBag.Title = Resources.Resources.tipo_puesto + "_" + Resources.Resources.editar;
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.tipo_puesto_editar</h2>

@using (Html.BeginForm("Edit", "Tipo_Puesto", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_tipo_puesto)
        <div class="form-group">
            @Html.Label("Empresa", htmlAttributes: new { @class = "control-label col-md-2 " })
            <label>@Model.Empresa.nombre</label>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Resources.nombre, Resources.Resources.nombre, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Salario Mínimo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="salario_minimo_input" required class="form-control" value="@MVC2013.Src.Comun.Util.FormatUtil.getCurrencyString(Model.salario_minimo)" name="salario_minimo" />

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Salario Máximo", htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                <input type="text" id="salario_maximo_input" required class="form-control" value="@MVC2013.Src.Comun.Util.FormatUtil.getCurrencyString(Model.salario_maximo)" name="salario_maximo" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Resources.tipo_puesto_estado_fuerza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.genera_estado_fuerza)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success btn-sm" type="submit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.guardar
                </button>
            </div>
        </div>
    </div>
}
<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>

<script>
    $(function () {
        $("#salario_minimo_input").inputmask('decimal',
                      {
                          'alias': 'numeric',
                          'groupSeparator': ',',
                          'autoGroup': true,
                          'digits': 2,
                          'radixPoint': ".",
                          'digitsOptional': false,
                          'allowMinus': false,
                          'prefix': '',
                          'placeholder': '0'
                      }
                   );
        $("#salario_maximo_input").inputmask('decimal',
                      {
                          'alias': 'numeric',
                          'groupSeparator': ',',
                          'autoGroup': true,
                          'digits': 2,
                          'radixPoint': ".",
                          'digitsOptional': false,
                          'allowMinus': false,
                          'prefix': '',
                          'placeholder': '0'
                      }
                   );
    });
</script>