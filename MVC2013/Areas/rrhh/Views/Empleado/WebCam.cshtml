@{
    Layout = null;
}
@Styles.Render("~/Content/css")


<div>
    <h4>@Resources.Resources.camara</h4>
    <div id="webcam" class="form-group">
    </div>
    <div class="form-group">
        <button class="btn btn-sm btn-primary" id="tomar_foto" data-num="0" type="submit">
            <span class="glyphicon glyphicon-camera"></span>&nbsp;@Resources.Resources.tomar_foto
        </button>
    </div>
</div>


<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.webcam.js")"></script>
<script>
    $(function () {
        $('#webcam').webcam({
            width: 320,
            height: 240,
            mode: "save",
            swffile: '@Url.Content("~/Scripts/jscam.swf")',
            onSave: function () { },
            onCapture: function () {
                webcam.save("@Url.Action("TomarFoto", "Empleado")")
            }
        });
    });
</script>
