            font-style: italic;
        }

        .negrita {
            font-weight: bold;
        }

        .subrayado {
            text-decoration: underline;
        }

        .datos_referencia {
            font-size: 10pt;
        }

        .justificado {
            text-align: justify;
        }

        .derecha {
            text-align: right;
        }

        .izquierda {
            text-align: left;
        }

        .centrado {
            text-align: center;
        }

        .page {
            margin-top: 100px;
            margin-left: 100px;
            margin-right: 100px;
            margin-bottom: 100px;
        }
    </style>

