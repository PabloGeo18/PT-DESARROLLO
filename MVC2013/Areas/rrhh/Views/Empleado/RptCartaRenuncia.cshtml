@model MVC2013.Models.rpt_Contrato_Result

@{
    Layout = null;
    MVC2013.Models.AppEntities db = new MVC2013.Models.AppEntities();
    MVC2013.Models.Empleado empleado = db.Empleado.Find(Model.id_empleado);

}

<!DOCTYPE html>

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Contratos.css")">*@
    <title>Carta de Renuncia</title>
    <style type="text/css">
        body {
            font-size: 14pt;
        }

        .datos_representante {
            text-decoration: underline;
            font-size: 14pt;
        }

        .datos_empleado {
            text-decoration: underline;
            font-size: 14pt;
