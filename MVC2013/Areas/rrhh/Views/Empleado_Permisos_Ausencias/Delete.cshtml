@model MVC2013.Models.Empleado_Permisos_Ausencias

@{
    ViewBag.Title = "Empleado_Permisos_Ausencias";
    Layout = "~/Areas/rrhh/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Ausencia</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>Empleado</dt>
        <dd>@(Model.Empleado.primer_nombre.ToUpper() + " " + Model.Empleado.primer_apellido.ToUpper())</dd>
        <dt>Tipo de Ausencia</dt>
        <dd>@Model.Tipo_Permiso_Ausencia.descripcion</dd>
        <dt>Fecha</dt>
        <dd>@Model.fecha.ToString("dd/MM/yyyy")</dd>
        <dt>Días</dt>
        <dd>@Model.dias</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt></dt>
        <dd>
            @using (Html.BeginForm("Eliminar", "Empleado_Permisos_Ausencias", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.id_empleado_permiso_ausencia)
                <button class="btn btn-sm btn-danger" type="submit">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>
</div>
<div class="form-group">
    <button class="btn-sm btn-bitbucket" type="button" onclick="location.href='@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>