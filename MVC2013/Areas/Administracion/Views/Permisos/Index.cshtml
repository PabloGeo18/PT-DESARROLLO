
@{
    ViewBag.Title = "Administrador de permisos de aplicaciones";
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm()) 
        { 
            @Html.ValidationSummary();
            <div class="form-group">
                @Html.Label("id_aplicacion", "Aplicación", new { @class = "control-label" })
                @Html.DropDownList("id_aplicacion", (IEnumerable<SelectListItem>)ViewBag.aplicaciones, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit"></span>&nbsp;@Resources.Resources.editar
                </button>
            </div>
        }
    </div>
</div>

