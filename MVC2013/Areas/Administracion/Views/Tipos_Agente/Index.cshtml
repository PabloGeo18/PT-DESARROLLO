@model IEnumerable<MVC2013.Models.Tipos_Agente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Tipos de Agentes</h2>

<p>
    <button class="btn btn-success btn-sm " onclick="location.href = '@Url.Action("Create")'">
        <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;@Resources.Resources.crear
    </button>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = item.id_tipo_agente })'">
                <span class="glyphicon glyphicon-edit"></span>&nbsp;    @Resources.Resources.editar
            </button>
            <button class="btn btn-info btn-sm" onclick="location.href = '@Url.Action("Details", new { id = item.id_tipo_agente })'">
                <span class="glyphicon glyphicon-search"></span>&nbsp;     @Resources.Resources.detalle
            </button>
            <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = item.id_tipo_agente })'">
                <span class="glyphicon glyphicon-trash"></span>&nbsp;   @Resources.Resources.eliminar
            </button>
   
        </td>
    </tr>
}

</table>
