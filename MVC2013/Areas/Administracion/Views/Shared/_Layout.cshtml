                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_contactos, "Index", "Contactos", User.Identity.Name)
                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_puesto_contacto, "Index", "Contacto_Puesto", User.Identity.Name)
                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_razones_sociales, "Index", "Razones_Sociales", User.Identity.Name)
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><span>@Resources.Resources.consultas</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li>@Html.SpecialMenuLinkLi("Reportes", "ViewReport", "Reportes", User.Identity.Name, "<i class='fa fa-file-text-o'></i>")</li>
                    </ul>
