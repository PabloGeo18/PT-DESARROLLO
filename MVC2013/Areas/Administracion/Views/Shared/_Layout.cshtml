                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_acciones, "Index", "Acciones", User.Identity.Name)
                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_empresa, "Index", "Empresas", User.Identity.Name)
                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_reporte, "Index", "Reportes", User.Identity.Name)
                        @Html.MenuLinkLi(Resources.Resources.administracion_menu_rol_acciones, "Index", "Rol_Acciones", User.Identity.Name)
                        
                        
                        @*@Html.MenuLinkLi("Tipos de Agentes", "Index", "Tipos_Agente", User.Identity.Name)
                @Html.MenuLinkLi("Tipos de Servicios", "Index", "Tipos_Servicios", User.Identity.Name)*@

