@model MVC2013.Models.Razones_Sociales

@{
    ViewBag.Title = Resources.Resources.razon_social + "_" + Resources.Resources.editar;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}
<!--Modal-->
<!--Generar Relacion-->
<div class="modal fade" id="crear_razon_social_contacto" data-backdrop="static" role="dialog">
    <div style="left: auto" class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("crear_razon_social_contacto", "Razones_Sociales", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "Error", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.id_razon_social)

                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    @Resources.Resources.asignar_contacto_razon_social
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.Label(@Resources.Resources.contacto)
                            @Html.DropDownList("id_contacto", null, htmlAttributes: new { @class = "form-control", @id = "id_razon_social_contacto" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.guardar
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!--Inicio de la página-->
<h2>@Resources.Resources.razon_social_editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_razon_social)

