<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>

<!--Razon Social Contacto-->
<h2>@Resources.Resources.contacto</h2>

<p>
    <button class="btn btn-sm btn-success" type="button" onclick="location.href='@Url.Action("create_contacto", "Razones_Sociales", new { id = Model.id_razon_social })'">
        <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;@Resources.Resources.crear
    </button>
    <button class="btn btn-sm btn-primary" data-target="#crear_razon_social_contacto" data-toggle="modal">
        <span class="glyphicon glyphicon-paperclip"></span>&nbsp;@Resources.Resources.asociar
    </button>
</p>

<div class="table-responsive">
    <table class="zebra-striped">
        <thead>
            <tr>
                <th>@Resources.Resources.contacto</th>
                <th>@Resources.Resources.acciones</th>
            </tr>
        </thead>
        @foreach (var razon_social_contacto in Model.Razon_Social_Contacto)
    {
            <tr>
                <td>@Html.DisplayFor(modelItem => razon_social_contacto.Contactos.nombre)</td>
                <td>
                    <button class="btn btn-sm btn-danger" type="button" onclick="location.href='@Url.Action("eliminar_razon_social_contacto", "Razones_Sociales", new { id = razon_social_contacto.id_razon_social_contacto, id_redirect = Model.id_razon_social })'">
                        <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                    </button>
                </td>
            </tr>
    }
    </table>

</div>
