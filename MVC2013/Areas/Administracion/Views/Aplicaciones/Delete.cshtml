@model MVC2013.Models.Aplicaciones

@{
    ViewBag.Title = @Resources.Resources.aplicacion_nombre + "_" + @Resources.Resources.eliminar;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.aplicacion_borrar</h2>

<h3>@Resources.Resources.confirmacion_eliminar</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.aplicacion_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>

        <dt>&nbsp;</dt><dd></dd>

        <dt>@Resources.Resources.aplicacion_ruta</dt>
        <dd>@Html.DisplayFor(model => model.ruta)</dd>
    </dl>

    <div class="dl-horizontal">
        <dt>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_aplicacion })'">
                    @Resources.Resources.eliminar
                </button>
            }
        </dt>
        <dd>
            <button class="btn btn-warning btn-sm" onclick="location.href = '@Url.Action("Index", new { id = @Resources.Resources.boton_regresar_id })'">
                @Resources.Resources.listado_regresar
            </button>
        </dd>
    </div>
</div>
