@model MVC2013.Models.Roles

@{
    ViewBag.Title = @Resources.Resources.rol_nombre + "_" + @Resources.Resources.eliminar;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.eliminar</h2>

<h3> @Resources.Resources.confirmacion_eliminar</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.Resources.rol_nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>
        <dt>&nbsp;</dt><dd></dd>
        <dt>@Resources.Resources.rol_aplicacion</dt>
        <dd>@Html.DisplayFor(model => model.Aplicaciones.nombre)</dd>
    </dl>

    <dl class="dl-horizontal">
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_rol })'">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>
</div>
<div class="form-group">
        <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
</div>
