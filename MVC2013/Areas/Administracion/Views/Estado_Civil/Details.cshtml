@model MVC2013.Models.Estado_Civil

@{
    ViewBag.Title = @Resources.Resources.estado_civil + "_" + @Resources.Resources.detalle;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.estado_civil_detalle</h2>

<div>
    <hr />
    <div class="form-horizontal">
        <dl class="dl-horizontal">
            <dt>@Resources.Resources.estado_civil_nombre</dt>
            <dd>@Html.DisplayFor(model => model.nombre)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dd>
                <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = Model.id_estado_civil })'">
                    <span class="glyphicon glyphicon-edit"></span>&nbsp;@Resources.Resources.editar
                </button>
            </dd>
        </dl>
    </div>
</div>
<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp; @Resources.Resources.listado_regresar
    </button>
</div>