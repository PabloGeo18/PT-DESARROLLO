                        @Html.MenuLinkLi("Control de Estado de Fuerza", "Index", "Estado_Fuerza_Detalle", User.Identity.Name)*@
                    </ul>
                </li>
                @*<li class="treeview">
                        <a href="#"><span>Procesos</span> <i class="fa fa-angle-left pull-right"></i></a>
