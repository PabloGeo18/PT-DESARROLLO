@model MVC2013.Models.Tickets_Tipo
@using System.Globalization
@{
    ViewBag.Title = "Eliminar - Tipo Ticket";
    Layout = "~/Areas/Tickets/Views/Shared/_Layout.cshtml";
    CultureInfo gt = new CultureInfo("es-GT");
}
<p>
    <div>
        <button class="btn btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
    </div>

</p>
<h2>Tipo de Ticket</h2>

<h3>¿Está seguro de eliminar el registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>@Html.DisplayFor(model => model.nombre)</dd>
        <dt>Valor</dt>
        <dd>@Model.valor.ToString("c",gt)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_ticket_tipo })'">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>

</div>