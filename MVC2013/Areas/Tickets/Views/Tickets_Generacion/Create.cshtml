@model MVC2013.Models.Tickets_Generacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Tickets/Views/Shared/_Layout.cshtml";
}

<h2>Generar Nuevos Tickets</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.id_ticket_tipo, "Tipo de Ticket", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("id_ticket_tipo", null, "--Seleccionar Uno--", htmlAttributes: new { @class = "form-control" })
                        <font color="red"> @Html.ValidationMessage("Seleccion_Tipo") </font>
                    </div>
                </div>
            </div>
            
        </div>
        
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.desde, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.desde, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.desde, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.hasta, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.hasta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hasta, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <font color="red"> @Html.ValidationMessage("Existe") </font>
            <font color="red"> @Html.ValidationMessage("Desde_Mayor") </font>
            <font color="red"> @Html.ValidationMessage("Mayor") </font>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success btn-sm" type="submit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.crear
                </button>
            </div>
        </div>

    </div>
}

<div>
    <div>
        <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Index")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
    </div>

</div>
