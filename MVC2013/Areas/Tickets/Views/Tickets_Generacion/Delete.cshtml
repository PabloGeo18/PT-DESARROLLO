@model MVC2013.Models.Tickets_Generacion

@{
    ViewBag.Title = "Eliminar - Generación Tickets";
    Layout = "~/Areas/Tickets/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2>Generación Ticket</h2>
<h3>¿Está seguro de eliminar este elemento?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Cantidad</dt>
        <dd>@Html.DisplayFor(model => model.cantidad)</dd>
        @*<dt>Total</dt>
            <dd>@Html.DisplayFor(model => model.total)</dd>*@
        <dt>Desde</dt>
        <dd>@Html.DisplayFor(model => model.desde)</dd>
        <dt>Hasta</dt>
        <dd>@Html.DisplayFor(model => model.hasta)</dd>
        <dt>Usuario Creador</dt>
        <dd>@Html.DisplayFor(model => model.Usuarios.nombre_completo_usuario)</dd>
        <dt>E-mail Usuario Creador</dt>
        <dd>@Html.DisplayFor(model => model.Usuarios.email)</dd>
        <dt>Tipo de Ticket</dt>
        <dd>Ticket de @Html.DisplayFor(model => model.Tickets_Tipo.nombre)</dd>

    </dl>
    <dl class="dl-horizontal">
        <dd>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_ticket_generacion })'">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>
</div>
