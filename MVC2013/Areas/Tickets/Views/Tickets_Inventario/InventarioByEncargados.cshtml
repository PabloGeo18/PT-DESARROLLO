@model IEnumerable<MVC2013.Models.Tickets_Inventario>

@{
    ViewBag.Title = "Inventario General - Inventarios";
    Layout = "~/Areas/Tickets/Views/Shared/_Layout.cshtml";
}

<h2>Inventario General</h2>

@foreach (var ticket in ViewBag.Tickets)
{

    if (Model.Where(x => x.id_ticket_tipo == ticket.id_ticket_tipo).Count() != 0)
    {
        <div class="row">
            <div class="col-md-6">
                <hr style="height:1px; border-style:solid;background-color:#222d32">
                <h4><span class="label label-primary">@ticket.nombre</span></h4>
                <table class="table-hover">
                    <thead style="background-color:#969aa2">
                        <tr>
                            <th class="text-center">Usuario</th>
                            <th class="text-center">Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.id_ticket_tipo == ticket.id_ticket_tipo)
                            {
                                <tr>
                                    <td class="text-center">@item.Usuarios.nombre_completo_usuario</td>
                                    <td class="text-center">@item.existencia</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-responsive">
            <thead style="background-color:cadetblue"></thead>
            <tbody><tr><td><p>No hay datos para mostrar</p></td></tr></tbody>
        </table>
    }
}