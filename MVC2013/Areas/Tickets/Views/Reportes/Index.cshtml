@model IEnumerable<MVC2013.Models.Reportes>

@{
    ViewBag.Title = ViewBag.Title = @Resources.Resources.reporte + "_" + @Resources.Resources.lista; ;
    Layout = "~/Areas/Administracion/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resources.reporte_lista</h2>

<div class="form-group">
    <button class="btn btn-sm btn-success" onclick="location.href = '@Url.Action("Create")'">
        <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;@Resources.Resources.crear
    </button>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>@Resources.Resources.reporte_nombre</th>
            <th>@Resources.Resources.reporte_descripcion</th>
            <th>@Resources.Resources.reporte_reporte</th>
            <th>@Resources.Resources.reporte_url</th>
            <th>@Resources.Resources.reporte_carpeta</th>
            <th>@Resources.Resources.reporte_grupo</th>
            <th>@Resources.Resources.acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reporte_Carpeta.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reporte_Grupo.nombre)
                </td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = item.id_reporte })'">
                        <span class="glyphicon glyphicon-edit"></span>&nbsp;@Resources.Resources.editar
                    </button>
                    <button class="btn btn-info btn-sm" onclick="location.href = '@Url.Action("Details", new { id = item.id_reporte })'">
                        <span class="glyphicon glyphicon-list-alt"></span>&nbsp;@Resources.Resources.detalle
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = item.id_reporte })'">
                        <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                    </button>
                </td>
            </tr>
        }

    </table>
</div>
