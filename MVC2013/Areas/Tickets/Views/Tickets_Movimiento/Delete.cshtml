@model MVC2013.Models.Tickets_Movimiento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Tickets/Views/Shared/_Layout.cshtml";
}
@if (Model.id_empleado == null)
{
    <div class="form-group">
        <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
    </div>
}
@if (Model.id_empleado != null)
{
    <div class="form-group">
        <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("MovTicketEmpleado")'">
            <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
        </button>
    </div>
}
<h2>Movimiento Ticket</h2>
<h3>¿Está seguro de eliminar este elemento?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Debe</dt>
        <dd>@Html.DisplayFor(model => model.debe)</dd>
        <dt>Haber</dt>
        <dd>@Html.DisplayFor(model => model.haber)</dd>
        <dt>Desde</dt>
        <dd>@Html.DisplayFor(model => model.desde)</dd>
        <dt>Hasta</dt>
        <dd>@Html.DisplayFor(model => model.hasta)</dd>
        <dt>Fecha de Creación</dt>
        <dd>@Html.DisplayFor(model => model.fecha_creacion)</dd>
        <dt>Usuario Creación</dt>
        <dd>@Html.DisplayFor(model => model.Usuarios.email)</dd>
        <dt>Tipo de Ticket</dt>
        <dd>@Html.DisplayFor(model => model.Tickets_Tipo.nombre)</dd>
        <dt>Tipo Movimiento</dt>
        <dd>@Html.DisplayFor(model => model.Tickets_Tipo_Movimiento.nombre)</dd>
    </dl>
        <dl class="dl-horizontal">
            <dd>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (Model.id_empleado == null)
                    {
                        <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_ticket_movimiento })'">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Eliminar
                        </button>
                    }
                    if (Model.id_empleado != null)
                    {
                        <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.id_ticket_movimiento })'">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Eliminar
                        </button>
                    }
                }
            </dd>
        </dl>
</div>
