
@{
    ViewBag.Title = "ManejoCostosMes";
    Layout = "~/Areas/Comercializacion/Views/Shared/_Layout.cshtml";
}
<h2>Inicio</h2>
<div class="row">
    <div class="input-group col-md-12">
        <div class="col-md-3">
            <label class="control-label col-md-2">Año</label>
            <div class="col-md-10">
                <select class="form-control" id="ccfma_anio" name="ccfma_anio">
                    @foreach (var a in ViewBag.anios)
                    {
                        <option value="1">@a</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="col-md-12">
                <button data-toggle="tooltip" data-placement="top" title="Filtrar por año" class="btn btn-primary" onclick="search()">
                    <span class="glyphicon glyphicon-eye-open"></span>
                </button>
            </div>
        </div>
    </div>
</div>
<hr style="height:3px; border-style:solid;background-color:#222d32">
<script type="text/javascript">
    function search() {
        anio = $('#ccfma_anio').val();
        $.ajax({
            url: '@Url.Action("Index", "Costos_Fijos_Mes_Anio")',
            data: { anio },
                type: "GET",
                success: function (data, status) {
                },
                error: function () {
                }
        });
    }
</script>