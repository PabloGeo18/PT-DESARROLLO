@model MVC2013.Models.Pt_Costos_Fijos
@using System.Globalization
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Comercializacion/Views/Shared/_Layout.cshtml";
    CultureInfo gt = new CultureInfo("es-GT");
}
<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2>Detalles</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descripción</dt>
        <dd>@Html.DisplayFor(model => model.ccof_descripcion)</dd>
        <dt>Precio Unitario</dt>
        <dd>@Html.DisplayFor(model => model.ccof_precio_unitario)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Edit", new { id = Model.ccof_id })'">
                <span class="glyphicon glyphicon-edit"></span>&nbsp;Editar
            </button>
        </dd>
    </dl>
</div>