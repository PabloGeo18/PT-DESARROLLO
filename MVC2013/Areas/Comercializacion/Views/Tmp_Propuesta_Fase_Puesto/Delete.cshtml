@model MVC2013.Models.Pt_Tmp_Propuesta_Fase_Puesto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Comercializacion/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <button class="btn-bitbucket btn-sm" onclick="location.href = '@Url.Action("Create", new { id=Model.ctpf_cfas_id})'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2>Eliminar</h2>
<h3>¿Está seguro que desea eliminar este puesto de la propuesta?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Fase</dt>
        <dd>@Html.DisplayFor(model => model.Pt_Fases_Cotizacion.cfas_nombre)</dd>
        <dt>Puesto</dt>
        <dd>@Html.DisplayFor(model => model.Pt_Puestos.cpue_descripcion)</dd>

    </dl>
    <dl class="dl-horizontal">
        <dd>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" onclick="location.href = '@Url.Action("Delete", new { id = Model.ctpf_id })'">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            }
        </dd>
    </dl>
</div>
