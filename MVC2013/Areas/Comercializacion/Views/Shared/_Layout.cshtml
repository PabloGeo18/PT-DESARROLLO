@using MVC2013.Src.Comun.Helper
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <link rel="icon" href="~/Content/AdminLte/img/pt.ico">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.Resources.aplicacion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/ionicons.min.css")">
    @*<link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/AdminLTE.css")">
        <link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/skins/skin-red.css")">*@
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/AdminLTE.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLte/css/skins/_all-skins.min.css")">


    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" type="text/css">

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Content/AdminLte/js/app.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="@Url.Content("~/Scripts/filter-inclusive.js")"></script>

    <!--Selet2-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/select2.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/select2.min.css")">
    <script src="@Url.Content("~/Scripts/select2.js")"></script>
    <script src="@Url.Content("~/Scripts/select2.min.js")"></script>

    <!--WebCam-->
    <script src="@Url.Content("~/Scripts/jquery.webcam.js")"></script>
    <script src="@Url.Content("~/Scripts/inputmask.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.inputmask.js")"></script>

    <script src="@Url.Content("~/Scripts/inputmask.extensions.js")"></script>
    <script src="@Url.Content("~/Scripts/inputmask.numeric.extensions.js")"></script>

    <!--- Calendar --->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/datepicker.css")">

    <!--- Calendar/Time --->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-datetimepicker.css")">
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>

    <!-- Grid MVC -->
    <link rel="stylesheet" href="@Url.Content("~/Content/Gridmvc.css")">
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

</head>
<body class="hold-transition skin-black fixed sidebar-mini">



    @Html.Partial("_LoginPartial")

    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar" style="background-color: #474747 !important">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="@Url.Content("~/Content/AdminLte/img/user2_160-160.png")" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p>Comercialización</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> @Html.Encode(User.Identity.Name)</a>
                </div>
            </div>
            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li>
                    <a href="@Url.Action("Index", "Home", new { area = "" })"><i class="fa fa-home"></i> <span>Inicio</span></a>
                </li>
                <li class="treeview">
                    <a href="#"><span>Catálogo General</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu" style="max-height:250px; overflow-y:auto">
                        <li>@Html.SpecialMenuLinkLi("Costos Fijos", "Index", "Costos_Fijos", User.Identity.Name, "<span class='glyphicon glyphicon-list-alt'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Estados de las Fases", "Index", "Estados_Fase", User.Identity.Name, "<span class='glyphicon glyphicon-list-alt'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Tipos de Pagos", "Index", "Tipo_Pagos", User.Identity.Name, "<span class='glyphicon glyphicon-list-alt'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Tipos de Proyecto", "Index", "Tipos_Proyecto", User.Identity.Name, "<span class='glyphicon glyphicon-list-alt'></span>")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><span>Finanzas</span><i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu" style="max-height:250px; overflow-y:auto">
                        <li>@Html.SpecialMenuLinkLi("Manejador de Gastos", "Index", "Costos_Fijos_Mes_Anio", User.Identity.Name, "<span class='glyphicon glyphicon-wrench'></span>")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><span>Operaciones</span><i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu" style="max-height:250px; overflow-y:auto">
                        <li>@Html.SpecialMenuLinkLi("Manejador de Insumos", "Index", "Insumos", User.Identity.Name, "<span class='glyphicon glyphicon-list-alt'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Manejador de Planilla", "Index", "Cantidad_Planilla_Mes_Anio", User.Identity.Name, "<span class='glyphicon glyphicon-wrench'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Manejador de Puestos", "Index", "Puestos", User.Identity.Name, "<span class='glyphicon glyphicon-wrench'></span>")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><span>Ventas</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu" style="max-height:250px; overflow-y:auto">
                        <li>@Html.SpecialMenuLinkLi("Manejador de Cotizaciones", "Index", "Cotizaciones", User.Identity.Name, "<span class='glyphicon glyphicon-wrench'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Cotizaciones Finalizadas", "CotizacionesFinalizadas", "Cotizaciones", User.Identity.Name, "<span class='glyphicon glyphicon-ok'></span>")</li>
                        <li>@Html.SpecialMenuLinkLi("Cotizaciones Eliminadas", "CotizacionesEliminadas", "Cotizaciones", User.Identity.Name, "<span class='glyphicon glyphicon-remove-sign'></span>")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><span>Consultas</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu" style="max-height:250px; overflow-y:auto">
                        <li>@Html.SpecialMenuLinkLi("Reportes", "ViewReport", "Reportes", User.Identity.Name, "<i class='fa fa-file-text-o'></i>")</li>
                    </ul>
                </li>
            </ul><!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="padding: 0px !important">
        <!-- Content Header (Page header) -->
        <section class="content-header"></section>
        <!-- Main content -->
        <section class="content">
            @RenderBody()
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">

        </div>
        <!-- Default to the left -->
        @*<strong>Copyright &copy; @DateTime.Today.Year <a href="#">Protecci&oacute;n Total</a>.</strong> All rights reserved.*@
        <strong>ERPGEO</strong>, Derechos reservados 2018
    </footer>


    @*@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
        @Scripts.Render("~/Scripts/bootstrap.js")
        @Scripts.Render("~/Content/AdminLte/js/app.js")
        @Scripts.Render("~/bundles/jqueryval")*@
    @Scripts.Render("~/Content/plugins/slimscroll/jquery.slimscroll.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
