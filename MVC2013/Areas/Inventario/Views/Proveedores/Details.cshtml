@model MVC2013.Models.Proveedores

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}

<h2>Detalle de Proveedor</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.Resources.descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

    </dl>
</div>

<dl class="dl-horizontal">
    <dd>
        <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Edit", new { id = Model.id_proveedor })'">
            <span class="glyphicon glyphicon-edit"></span> @Resources.Resources.editar
        </button>
    </dd>
</dl>


<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>

