@model MVC2013.Models.Bodega_Inventario_Consumibles

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}

<h2>Trasladar Consumibles</h2>
@{ int id_traslado = @ViewBag.id_traslado; }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr /> 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
        @Html.HiddenFor(model => model.id_consumible)
        @Html.HiddenFor(model => model.id_bodega_inventario_consumibles)
        @Html.HiddenFor(model => model.id_bodega)
        
        @{ int existencia = @ViewBag.existencia; }

        <div class="form-group">
            @Html.LabelFor(model => model.existencia,@Resources.Resources.existencia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.existencia, new { htmlAttributes = new { @class = "form-control", max = existencia } })
                @Html.ValidationMessageFor(model => model.existencia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success btn-sm" type="submit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.enviar_consumibles
                </button>
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Edit", new { id = id_traslado })'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
