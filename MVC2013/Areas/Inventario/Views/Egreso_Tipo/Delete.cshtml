@model MVC2013.Models.Egreso_Tipo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}
<div>
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2>Eliminar Tipo de Egreso</h2>
<h3>¿Está seguro de eliminar el registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.Resources.descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <dl class="dl-horizontal">
            <dd>
                <button class="btn btn-sm btn-danger" type="submit">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;@Resources.Resources.eliminar
                </button>
            </dd>
        </dl>
    }
</div>
