@model MVC2013.Models.Inventario_Tipo

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}

<h2><u>Detalles de Tipo de Inventario</u></h2>
<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descripación</dt>
        <dd>@Html.DisplayFor(model => model.descripcion)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Edit", new { id = Model.id_inventario_tipo })'">
                <span class="glyphicon glyphicon-edit"></span> @Resources.Resources.editar
            </button>
        </dd>
    </dl>
</div>