                        <th class="text-center">Estado del Egreso</th>
                        <th class="text-center">Tipo de Egreso</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(x=>x.id_cliente != null && x.id_bodega_destino == null))
