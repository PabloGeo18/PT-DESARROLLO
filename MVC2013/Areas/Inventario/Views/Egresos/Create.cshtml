@model MVC2013.Models.Egresos

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}
<div>
    <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2><u>Crear Egreso</u></h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.id_bodega, "Bodega ( ¿Quién entrega? )", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("id_bodega", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_bodega, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.rol == 8)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.id_bodega_destino, "Bodega ( ¿Quién recibe? )", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("id_bodega_destino", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_bodega_destino, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(model => model.id_cliente, "Cliente ( ¿Quién recibe? )", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("id_cliente", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_cliente, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.id_egreso_tipo, "Tipo de Egreso", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("id_egreso_tipo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_egreso_tipo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-success btn-sm" type="submit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.crear
                </button>
            </div>
        </div>
    </div>
}