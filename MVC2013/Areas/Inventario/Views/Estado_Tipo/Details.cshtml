@model MVC2013.Models.Estado_Tipo

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <button class="btn-sm btn-bitbucket" onclick="location.href = '@Url.Action("Index")'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>
<h2>Detalles del Tipo de Estado</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Descripción</dt>
        <dd>@Html.DisplayFor(model => model.descripcion)</dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("Edit", new { id = Model.id_estado_tipo })'">
                <span class="glyphicon glyphicon-edit"></span> @Resources.Resources.editar
            </button>
        </dd>
    </dl>
</div>