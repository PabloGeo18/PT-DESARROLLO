@model MVC2013.Models.Consumibles

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Inventario/Views/Shared/_Layout.cshtml";
}

<h2>Consumibles - Agregar Existencias</h2>
@{ int id_ingreso = @ViewBag.id_ingreso; }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_consumible)
        @Html.HiddenFor(model => model.descripcion)
        @Html.HiddenFor(model => model.costo)
        @Html.HiddenFor(model => model.costo_venta)
        @Html.HiddenFor(model => model.id_consumible_tipo)


        <div class="form-group">
            @Html.LabelFor(model => model.existencia,Resources.Resources.existencia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.existencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.existencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success btn-sm" type="submit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;@Resources.Resources.guardar
                </button>
            </div>
        </div>
    </div>
}
<div>
    <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("add_consumibles", "Ingresos", new { id = id_ingreso })'">
        <span class="glyphicon glyphicon-backward"></span>&nbsp;@Resources.Resources.listado_regresar
    </button>
</div>